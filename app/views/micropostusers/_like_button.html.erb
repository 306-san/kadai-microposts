<% if current_user.liking?(micropost) %>
  <%= form_for(current_user.micropost_users.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-default btn-sm") do %>
      <%= content_tag :span, "", class: "glyphicon glyphicon-star", style: "color:gold" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.micropost_users.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-default btn-sm") do %>
      <%= content_tag :span, "", class: "glyphicon glyphicon-star" %>
    <% end %>
  <% end %>
<% end %>
